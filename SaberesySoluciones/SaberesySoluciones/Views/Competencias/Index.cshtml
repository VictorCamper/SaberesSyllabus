@model List<SaberesySoluciones.Models.Competencia>
@{
    ViewBag.Title = "Competencias";
}

<h2>@ViewBag.Title</h2>

<script type="text/javascript">
$(document).ready(function() {
    $("#btn-add").click(function(){
        $("#add").modal({show: true});
    });
    $("#btn-edit").click(function () {
        $("#edit").modal({ show: true });
    });
    $("#btn-delete").click(function () {
        $("#delete").modal({ show: true });
    });
});
</script>

<a href="" id="btn-add" class="btn btn-primary" data-title="add" data-toggle="modal" data-target="#add" style="margin-bottom:10px">Agregar</a>

<table class="table table-hover ">
    <tr>
        <th>Código</th>
        <th>Descripción</th>
        <th>Nivel</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    <tr>
        @foreach (var comp in Model)
        {

        <td style="text-align:center">@comp.codigo</td>
        <td style="text-align:justify">@comp.descripcion</td>
        <td>@comp.nivel</td>
        <td style="vertical-align: middle">
            <a class="btn btn-success ">Ver Aprendizajes</a>
        </td>

        <td style="vertical-align: middle">
            <a href="" id="btn-edit" class="btn btn-warning" data-title="edit" data-toggle="modal" data-target="#edit">Modificar</a>
        </td>
        <td style="vertical-align: middle">
            <a href="" id="btn-delete" class="btn btn-danger" data-title="delete" data-toggle="modal" data-target="#delete">Modificar</a>
        </td>
        }
    </tr>

</table>

<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="add" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Agregar una Nueva Competencia</h4>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Editar Competencia</h4>
            </div>
            <div class="modal-body">
                <p>Modal body text goes here.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Modificar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="delete" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></button>
                <h4 class="modal-title custom_align" id="Heading">Eliminar Competencia</h4>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que quieres eliminar la Competencia?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Eliminar</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>