
@using SaberesySoluciones.Models
@using SaberesSyllabus.Models

@model List<SaberesySoluciones.Models.Competencia>

@{
    ViewBag.Title = "Saberes Logrados";
}

<h2>@ViewBag.Title</h2>



<table class="table table-hover " id="comp">
    <thread>
        <tr>
            <th>Boton desplegar</th>
            <th>Código</th>
            <th>Descripción</th>
            <th>Nivel de Saber</th>
            <th></th>
        </tr>
    </thread>

    @foreach (var competencia in Model)
    {
        <tr>
            <td style="text-align:center"><img src="~/Content/img/add.png" style="cursor:pointer" compID="@competencia.Codigo" /></td>
            <td style="text-align:center">@competencia.Codigo</td>
            <td style="text-align:justify">@competencia.Descripcion</td>
            <td>@competencia.PorcentajeLogro</td>
           
        </tr>


        <tr id="fila-@competencia.Codigo" style="display:none">
            <td></td>
            <td colspan="5">
                 @Html.Action("SubTablaAprendizaje")
            </td>
        </tr>


    }
</table>

@section scripts{
    <script type = "text/javascript">
        $(function () {

            $("#comp tbody img").click(function () {

                var compID = $(this).attr("compID");
                var fila = $("#fila-" + compID);
                if (fila.css("display") == "none") {
                    fila.css("display", "table-row");
                }
                else{
                     fila.css("display", "none");
                }
                

            });
        });


    </script>

    
    }



