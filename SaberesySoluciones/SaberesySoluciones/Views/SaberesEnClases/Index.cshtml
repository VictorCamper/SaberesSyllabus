@model SaberesySoluciones.ViewModel.SaberesEnClasesController
@{
    ViewBag.Title = "";
}



@using (Html.BeginForm("Modificar", "SaberesEnClases", FormMethod.Post, new { enctype = "multipart/form-data", @style = "border:none", @class = "col-offset-2" }))
{
    <h2>@ViewBag.Title</h2>

    <h3>@ViewBag.Messge</h3>

    <div class="panel panel-default">
        <div class="panel-body">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <select id="valorSalida" name="valorSalida" required>
                            @if (Model.clases != null)
                            {
                                for (int i = 0; i < Model.clases.Count; i++)
                                {
                                    if (Model.clases[i].codigo == Convert.ToInt32(ViewBag.valor))
                                    {
                                        <option selected="selected" value="@Model.clases[i].codigo">@Model.clases[i].descripcion</option>
                                    }
                                    else
                                    {
                                        <option value="@Model.clases[i].codigo">@Model.clases[i].descripcion</option>
                                    }
                                }
                            }
                        </select>

                    </div>
                    <div class="col">
                        <button type="submit" id="cargar" class="btn btn-primary btn-sm">Cargar Clase</button>
                    </div>
                </div>
            </div>
        </div>
    </div>





    <div class="container">
        <div class="row">
            <div class="col">
                <h2>Saberes</h2>
                <table class="table table-striped table-hover table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Código</th>
                            <th>Descripción</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.saberesNo != null)
                        {
                            foreach (var saber in Model.saberesNo)
                            {
                                <tr>
                                    <td>@saber.Codigo</td>
                                    <td>@saber.Descripcion</td>
                                    <td><button type="submit" class="btn btn-success btn-sm" data-toggle="modal" data-target="#verSaberes2" onclick="agregarSaber('@saber.Codigo')"> Agregar </button></td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>

            </div>
            <div class="col">
                <h2>Saberes Agregados</h2>

                <table class="table table-striped table-hover table-bordered">
                    <thead class="thead-dark">

                    </thead>
                    <tbody class="table-success">
                    <thead class="thead-dark">
                        <tr>
                            <th>Código</th>
                            <th>Descripción</th>
                            <th></th>
                        </tr>
                    </thead>
                    @if (Model.saberDeClase != null)
                    {
                        foreach (var saber in Model.saberDeClase)
                        {
                    <tr>
                        <td>@saber.Codigo</td>
                        <td>@saber.Descripcion</td>
                        <td><button type="submit" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#verSaberes2"  onclick="quitarSaber('@saber.Codigo')"> Quitar </button></td>
                    </tr>
                        }
                    }

                </table>

            </div>
        </div>
    </div>
}

    <script>
        function agregarSaber(codigoSaber) {
            
            $.ajax({
                type: "POST",
                cache: false,
                url: "@Url.Action("Agregar")",
                    dataType: "html",
                    data: JSON.stringify({ 'valor': @ViewBag.valor , 'codigoSaber': codigoSaber}),
                    contentType: "application/json; charset=utf-8",
                    
                    success: function (data) {                        
                        //var _npcSpeeds = $("#_npcInfo");
                        //_npcSpeeds.html(data);
                    },
                    failure: function (errMsg) {
                        console.log("error ?")
                        alert(errMsg);
                    }
            });

        }


        function quitarSaber(codigoSaber) {

            $.ajax({
                type: "POST",
                cache: false,
                url: "@Url.Action("Quitar")",
                    dataType: "html",
                    data: JSON.stringify({ 'valor': @ViewBag.valor , 'codigoSaber': codigoSaber}),
                    contentType: "application/json; charset=utf-8"});

        }
    </script>








