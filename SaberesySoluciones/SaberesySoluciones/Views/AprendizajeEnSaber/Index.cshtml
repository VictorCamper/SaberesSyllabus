@model SaberesySoluciones.ViewModel.AprendizajeEnSaberesController
@{
    ViewBag.Title = "Agregar Saberes a un Aprendizaje";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Crear", "AprendizajeEnSaber", FormMethod.Post, new { enctype = "multipart/form-data", @style = "border:none", @class = "col-offset-2" }))
{
    <div class="container">
        <div class="row">
            <div class="col">
                <select id="Aprendizaje" name="Aprendizaje" required>
                    @if (Model.aprendizajes != null)
                    {
                        foreach (var aprendizaje in Model.aprendizajes)
                        {
                            <option value="@aprendizaje.Codigo">@aprendizaje.Descripcion</option>
                        }
                        <option value="Nada">...</option>
                    }
                </select>

            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary">Cargar Aprendizaje</button>
            </div>
        </div>
    </div>
 }
<br />


        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Saberes</h2>

                    <table class="table table-striped table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Código</th>
                                <th>Descripción</th>
                                <th>Añadir a Aprendizaje</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Column content</td>
                                <td>Column content</td>
                            </tr>
                        </tbody>
                    </table> 
                </div>
                <div class="col">
                    <h2>Saberes Agregados</h2>

                    <table class="table table-striped table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Código</th>
                                <th>Descripción</th>
                                <th>Eliminar de Aprendizaje</th>
                            </tr>
                        </thead>
                        <tbody class="table-success">
                            <tr>
                                <td>x</td>
                                <td>Column content</td>
                                <td>Column content</td>
                            </tr>
                        </tbody>
                    </table> 
                </div>
            </div>
        </div>
