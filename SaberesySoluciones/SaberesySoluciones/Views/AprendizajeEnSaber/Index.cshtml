@model SaberesySoluciones.ViewModel.AprendizajeEnSaberesController

@{
    ViewBag.Title = "Agregar Saberes a un Aprendizaje";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Crear", "AprendizajeEnSaber", FormMethod.Post, new { enctype = "multipart/form-data", @style = "border:none", @class = "col-offset-2" }))
{
    <div class="container">
        <div class="row">
            <div class="col">
                <select id="Aprendizaje" name="Aprendizaje" required>
                    @if (Model.aprendizajes != null)
                    {
                        foreach (var aprendizaje in Model.aprendizajes)
                        {
                            <option value="@aprendizaje.Codigo">@aprendizaje.Descripcion</option>
                        }
                        <option value="Nada">...</option>
                    }
                </select>

            </div>
            <div class="col">
                <button type="submit" class="btn btn-primary btn-sm">Cargar Aprendizaje</button>
            </div>
        </div>
    </div>
 }
<br />


        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>Saberes</h2>

                    <table class="table table-striped table-hover table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Código</th>
                                <th>Descripción</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var saber in Model.saberes)
                            {
                                <tr>
                                    <td>@saber.Codigo</td>
                                    <td>@saber.Descripcion</td>
                                    <td><a href="" id="btn-primary" class="btn btn-primary btn-sm" data-title="desh" data-toggle="modal" data-target="#desh" onclick="">Añadir a Aprendizaje</a></td>
                            </tr>
                            }
                        </tbody>
                    </table> 
                </div>
                <div class="col">
                    <h2>Saberes Agregados</h2>

                    <table class="table table-striped table-hover table-bordered">
                        <thead class="thead-dark">
                            
                        </thead>
                        <tbody class="table-success">
                            <thead class="thead-dark">
                                <tr>
                                    <th>Código</th>
                                    <th>Descripción</th>
                                    <th></th>
                                </tr>
                            </thead>
                            @foreach (var saber in Model.saberDeAprendizaje)
                            {
                                <tr>
                                    <td>@saber.Codigo</td>
                                    <td>@saber.Descripcion</td>
                                    <td><a href="" id="btn-primary" class="btn btn-primary btn-sm" data-title="desh" data-toggle="modal" data-target="#desh" onclick="">Eliminar de Aprendizaje</a></td>
                                </tr>
                            }
                        </tbody>
                    </table> 
                </div>
            </div>
        </div>
