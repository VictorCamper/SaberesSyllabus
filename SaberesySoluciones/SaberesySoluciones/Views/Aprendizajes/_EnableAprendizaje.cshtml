<div class="modal fade" id="modalEnableApren" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Habilitar Aprendizaje</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Está seguro de habilitar este aprendizaje?
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Habilitar", "Aprendizajes"))
                {
                    <input type="hidden" id="enableapren" name="codigo" value="" />
                    <button type="submit" class="btn btn-primary">Habilitar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                }
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    enable = function (idapren) {
        document.getElementById("enableapren").setAttribute("value", idapren);
    }
</script>