<div class="modal fade" id="modalEditCat" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modificar Categoría</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            @using (Html.BeginForm("EditarCategoria", "Aprendizajes"))
            {
                <div class="modal-body">


                    <div class="form-group">
                        <label for="Nombre">Nombre de la Categoría:</label>
                        <input type="text" id="Nombre" class="form-control" name="Nombre" value="" required/>

                    </div>

                </div>
                <div class="modal-footer">
                    <input type="hidden" id="categoriaprev" name="categoriaprev" value="" />
                    <button type="submit" class="btn btn-primary">Modificar</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                </div>
            }
        </div>
    </div>
</div>
